<section class="slider">
  <div class="slider__inner">
    <a class="slider__link" href="">
      <picture class="slider__img">
        <source
          srcset="https://cdn.shopify.com/s/files/1/0680/4848/6651/files/top___1_sp.jpg?v=1704238355"
          media="(min-width: 750px)"
          type="image/jpg" />
        <img src="https://cdn.shopify.com/s/files/1/0680/4848/6651/files/top___1.jpg?v=1704238355" alt="" />
      </picture>
    </a>
    <div class="slider__title-box">
      <p class="slider__subtitle">創業明治二〇年</p>
      <h2 class="slider__title">京都からのお届けもの</h2>
    </div>
    <div class="slider__btn">
      <a href="">商品一覧をみる</a>
    </div>
  </div>
</section>


<style>

  .slider {
    width: 100%;
  }

  .slider__inner {
    position: relative;

  }
  .slider__link {
    display: block;
    cursor: pointer;
  }
  .slider__img {
    width: 100%;
    display: block;
  }

  .slider__img img {
    width: 100%;
    display: inline-block;
    vertical-align: bottom;
  }
  .slider__title-box {
    position: absolute;
    top: 5vw;
    right: 7.03vw;
    writing-mode: vertical-rl;

  }
  .slider__subtitle {
    color: #FEFFFF;
    margin: 0;
    font-size: min(calc(18 / 1280 * 100vw), 18px);
    line-height: 120%;
    letter-spacing: 0.25em;
  }
  .slider__title {
    color: #FEFFFF;
    margin: 0 16px 0 0;
    font-size: min(calc(40 / 1280 * 100vw), 40px);
    line-height: 120%;
    letter-spacing: 0.25em;
  }
  .slider__btn {
    position: absolute;
    bottom: 0vw;
    left: 7.03vw;
  }
.slider__btn a {
  display: inline-block;
  text-decoration: none;
  color: #FEFFFF;
  background-color: #6B5D58;
  writing-mode: vertical-rl;
  padding: 16px 24px;
  font-size: min(calc(16 / 1280 * 100vw), 16px);
  line-height:110% ;
  letter-spacing: 0.64px;
}

@media screen and (max-width: 750px) {

  .slider__title-box {
    position: absolute;
    top: 6.4vw;
    right: 4vw;
  }
  .slider__subtitle {
    font-size: min(calc(10 / 375 * 100vw), 10px);
    line-height: 120%;
    letter-spacing: 0.25em;
  }
  .slider__title {
    margin: 0 8px 0 0;
    font-size: min(calc(12 / 375 * 100vw), 12px);
    line-height: 120%;
    letter-spacing: 0.25em;
  }
  .slider__btn {
    bottom: 0vw;
    left: 0vw;
  }
.slider__btn a {
  padding: 8px 16px;
  font-size: min(calc(12 / 375 * 100vw), 12px);
  letter-spacing: 0.48px;
}
}
</style>

