        "label": "画像1"
      }, {
        "type": "image_picker",
        "id": "image2",
        "label": "画像2"
      }, {
        "type": "text",
        "id": "text1",
        "label": "テキスト1"
      }, {
        "type": "text",
        "id": "text2",
        "label": "テキスト2"
      }
    ],
    "blocks": [],
    "presets": [
      {
        "name": "2枚画像付きテキスト"
      }
    ]
  }
{% endschema %}