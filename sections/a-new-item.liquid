{{ 'a-custom.css' | asset_url | stylesheet_tag }}

<section class="ranking grid-card">
  <section class="section-title ranking-title">
    <h2 class="section-title__title ">
     {{ section.settings.title }}
    </h2>
    <p class="section-title__sub-title">
      {{ section.settings.sub_title }}
    </p>
  </section>
  <div class="ranking__inner grid-card__inner inner">
    <ul class="new-item__items grid-card__items">
      {% assign collection = collections["new-item"] %}
      {% for product in collection.products limit: 4%}
        <li class="new-item__item grid-card__item">
          <img
            class="new-item__img grid-card__img"
            src="{{ product.featured_image | img_url: '500x' }}"
            alt="">
          <h3 class="ranking__title grid-card__title">{{ product.title }}</h3>
          <p class="ranking__price grid-card__price">{{ product.price | money }}</p>
        </li>
      {% endfor %}
      </ul>
      <div class="ranking__btn">
        <a href="{{ section.settings.btn_url }}">{{ section.settings.btn_text }}</a>
      </div>
     

  </div>
</section>

<style>
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .section-title.ranking-title {
    margin-top: 0;
  }

  .grid-card__items.new-item__items {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 8px;
  }

  .grid-card__item.new-item__item {
    max-width: 269px;
    width: 100%;
    padding-bottom: 17px;
    position: relative;

  }

  .grid-card__img.new-item__img {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    max-width: 269px;
    width: 100%;
    display: inline-block;
  }
  .grid-card__title {
    margin: 17px 0 0;
    font-size: min(calc(16 / 1280 * 100vw), 16px);
    line-height: 172%;
    letter-spacing: 0.64;
  }
  .grid-card__price {
    margin: 7px 0 0;
    font-size: min(calc(16 / 1280 * 100vw), 16px);
    line-height: 172%;
    letter-spacing: 0.64;
  }
  .ranking__btn {
    margin-top: 10px;
    text-align: center;
  }
  .ranking__btn a {
    letter-spacing: 0.64px;
    font-size: min(calc(16 / 1280 * 100vw), 16px);
    color: #FEFFFF;
    background-color: #779547;
    padding: 9.5px 30px;
    display: inline-block;
    text-decoration: none;
    color: #fff;
  }
  @media screen and (max-width: 750px) {
    ul {
      list-style: none;
      margin: 0;
      padding: 0;
    }
    .grid-card__items.new-item__items {
      grid-template-columns: repeat(2, 1fr);
      gap: 4px;
      padding: 0;
    }
    .grid-card__item {
      max-width: 100%;
      padding-bottom: 17px;
      position: relative;

    }
    .grid-card__img {
      max-width: 100%;
    }

    .grid-card__title {
      margin: 13px 0 0;
      font-size: min(calc(15 / 375 * 100vw), 15px);
    }

    .grid-card__price {
      margin: 7px 0 0;
      font-size: min(calc(15 / 375 * 100vw), 15px);
    }

    .ranking__btn {
      margin-top: 10px;
      text-align: center;

    }
    .ranking__btn a {
      font-size: min(calc(15 / 375 * 100vw), 15px);
    }
  }
</style>

{% schema %}
  {
    "name": "新着情報",
    "class": "banner-section",
    "settings": [
      {
        "type": "range",
        "id": "padding_top",
        "label": "上の余白",
        "min": 0,
        "max": 120,
        "step": 4,
        "default": 80,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "下の余白",
        "min": 0,
        "max": 120,
        "step": 4,
        "default": 80,
        "unit": "px"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "背景色",
        "default": "#fff",
        "info": "背景色を選択してください。"
      },
      {
        "type": "text",
        "id": "title",
        "label": "タイトル",
        "default": "新着情報"
      }, {
        "type": "text",
        "id": "sub_title",
        "label": "サブタイトル",
        "default": "和菓子屋では日々新しい和菓子に挑戦しています。ぜひご堪能あれ。"

      }, {
        "type": "text",
        "id": "btn_text",
        "label": "ボタンテキスト",
        "default": "もっとみる"
      }, {
        "type": "url",
        "id": "btn_url",
        "label": "ボタンリンク"
      }
    ],
    "blocks": [],
    "presets": [
      {
        "name": "新着情報"
      }
    ]
  }
{% endschema %}