{% comment %}
  Renders social icons.
  Accepts:
  - class: {String} a class to be added to the <ul> element (optional).

  Usage:
  {% render 'social-icons',
  class: 'my-class'
  %}
{% endcomment %}


<style>
  .custom-footer__list-social{
    display: flex;
    gap: 26px;
    align-items: center;
    margin-top: 33px;
  }
  .list-social__link.custom-footer__link{
  padding: 0;
 
}

@media screen and (max-width: 768px) {
  .custom-footer__list-social{
    margin-top: 41.5px;
  }
}

</style>

<ul class="list-unstyled custom-footer__list-social{% if class %} {{ class}}{% endif %}" role="list">
  {%- if settings.social_twitter_link != blank -%}
    <li class="list-social__item">
      <a href="{{ settings.social_twitter_link }}" class="link list-social__link custom-footer__link">
        {%- render 'icon-twitter' -%}
        <span class="visually-hidden">{{ 'general.social.links.twitter' | t }}</span>
      </a>
    </li>
  {%- endif -%}
